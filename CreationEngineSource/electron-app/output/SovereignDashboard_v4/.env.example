# Example environment variables for development and deployment

# Flask/WSGI server configuration
FLASK_APP=main.py
FLASK_ENV=development
PORT=5000

# Database connection settings (example using SQLite)
DB_TYPE=sqlite:///sovereign_system.db

# API keys and credentials (replace with actual values)
API_KEY=REPLACE_WITH_YOUR_API_KEY
SMTP_SERVER=REPLACE_WITH_SMTP_SERVER
EMAIL_USER=REPLACE_WITH_EMAIL_USER
EMAIL_PASSWORD=REPLACE_WITH_EMAIL_PASSWORD

# Monitoring and alerting thresholds
HEARTBEAT_THRESHOLD=30 # seconds
MEMORY_WARNING_LEVEL=80 # percent

# Other configurations
DEBUG=True